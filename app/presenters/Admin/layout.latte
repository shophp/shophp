<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title>{ifset pageTitle}{include pageTitle} | {/ifset} Administration | {$projectName}</title>
	<link rel="stylesheet" href="{$basePath}/style/admin.css">
	<script src="https://code.jquery.com/jquery-2.2.0.min.js"></script>
</head>
<body>
	<header>
		<h1>
			<a n:href=":Admin:Home:Dashboard:">{$projectName} Administration</a>
		</h1>
		<nav>
			<ul>
				<li>
					<a n:href=":Admin:Category:List:" {ifCurrent :Admin:Category:List:}class="selected"{/ifCurrent}>Categories</a>
				</li>
				<li>
					<a n:href=":Admin:Product:List:" {ifCurrent :Admin:Product:List:}class="selected"{/ifCurrent}>Products</a>
				</li>
				<li>
					<a n:href=":Admin:Shipment:List:" {ifCurrent :Admin:Shipment:List:}class="selected"{/ifCurrent}>Shipments</a>
				</li>
				<li>
					<a n:href=":Admin:Order:List:" {ifCurrent :Admin:Order:List:}class="selected"{/ifCurrent}>Orders</a>
				</li>
			</ul>
		</nav>
	</header>

	<main>
		<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
		<article>
			{block content}{/block}
		</article>
	</main>

	<script src="http://nette.github.io/resources/js/netteForms.js"></script>

</body>
</html>
