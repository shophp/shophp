services:
	router:
		class: ShoPHP\Routes
		arguments:
			routes: %routes%

parameters:
	routes:
		/:
			defaults: "Front:Home:Homepage:default"

		/terms-of-trade:
			defaults: "Front:Home:Terms:default"

		/about-us:
			defaults: "Front:Home:About:default"

		"/category/<path [a-z0-9/-]+>":
			defaults: "Front:Product:Category:default"

		"/admin/<presenter>/<action>[/<id [0-9]+>]":
			defaults:
				module: Admin
				action: default
